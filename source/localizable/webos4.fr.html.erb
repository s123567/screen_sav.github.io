<%= partial "partials/navigation" %>
<div class="container guide-container">
  <%= partial("partials/help", :locals => { :os => :webos4 }) %>
  <%= partial "partials/anchors" %>

  <div class="guide-content">
    <% data.lg.webos_four.each_with_index do |s, i| %>
    <div id="<%= s.anchor if s.anchor.present? %>" class="content-block <%= 'warning' if s.warning %>">
      <%= simple_format t(s.text) %>
      <%= image_tag s[local_img], class: "guide-picture" if s.img_fr.present?  %>
    </div>
    <% end %>
  </div>
</div>
